QScrollBar:vertical
{
  width: 10px;
  background-color: transparent;
  margin: 0px;
  padding: 10px 0px;
}

QScrollBar::handle:vertical
{
  width: 10px;
  background-color: #858585;
  border-radius: 0px;
  min-height: 10;
}

QScrollBar:vertical:hover
{
  width: 10px;
  background-color: #222222;
  margin: 0px;
  padding: 10px 0px;
}

QScrollBar::handle:vertical:hover
{
  width: 10px;
  background-color: #7a7a7a;
  border-radius: 0px;
  min-height: 10;
}

QScrollBar::add-line:vertical
{
  width: 10px;
  height: 10px;
  border-image: url(:/icons/scrollbar-down.png);
  subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical
{
  width: 10px;
  height: 10px;
  border-image: url(:/icons/scrollbar-up.png);
  subcontrol-position:top;
}

QScrollBar::add-line:vertical:hover
{
  width: 10px;
  height: 10px;
  border-image: url(:/icons/scrollbar-down-dark.png);
  subcontrol-position: bottom;
}

QScrollBar::sub-line:vertical:hover
{
  width: 10px;
  height: 10px;
  border-image: url(:/icons/scrollbar-up-dark.png);
  subcontrol-position: top;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
  background: rgb(0,0,0,10%);
  border-radius: 2px;
}
